<html>
<!-- Include head, pass meta object through -->
<%- include('partials/head', { meta: {
title: "Home",
description: "Homepage of LAMP."
}
}) %>
<body class="bg-gray-100">
<div class="absolute inset-0 bg-[url(/svg/grid.svg)] bg-center w-full h-full -z-10"></div>
<div class="relative z-10">
    <div class="container mx-auto h-screen flex flex-col items-center justify-center">
        <div class="p-6 rounded-lg shadow-md bg-white">
            <h1 class="text-4xl font-bold mb-4">LAMP</h1>
            <p class="text-xl font-medium mb-4">Linear Algebra Multiplayer Projection</p>
            <div class="flex flex-col items-center justify-center">
                <% if (!loggedIn) { %>
                    <a href="/register" class="bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 mb-4">
                        Register
                    </a>
                    <a href="/login" class="bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 mb-4">
                        Login
                    </a>
                <% } else { %>
                    <a href="/play" class="bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 mb-4">
                        Play
                    </a>
                    <a href="/logout" class="bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 mb-4">
                        Logout
                    </a>
                    <a href="/profile" class="bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 mb-4">
                        Profile
                    </a>
                    <a href="/settings" class="bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 mb-4">
                        Settings
                    </a>
                <% } %>
                <a href="/leaderboard" class="bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 mb-4">
                    Leaderboard
                </a>
                <a href="/about" class="bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 mb-4">
                    About
                </a>
            </div>
        </div>
    </div>
</div>
</body>
</html>